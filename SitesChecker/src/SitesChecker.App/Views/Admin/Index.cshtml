@model List<SitesChecker.Domain.MonitoringResult>

<!DOCTYPE html>

<html>
<head>
    <div class="btn-group">  
        <a id="createEditCustomerModal" data-toggle="modal" asp-action="AddSite" data-target="#modal-action-customer" class="btn btn-primary">  
            <i class="glyphicon glyphicon-plus"></i>  Добавить сайт  
        </a>  
    </div>
    <table class="table table-bordered table-striped table-condensed">
        <thead>
        <tr>
            <th>Название</th>
            <th>URL</th>
            <th>Доступен No</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SiteInfo.Name)</td>
                <td>@item.SiteInfo.Url)</td>
                <td>
                    <input type="checkbox" asp-for="@item.IsAvailable"/>
                </td>
                <td>
                    <a id="editCustomerModal" data-toggle="modal" asp-action="UpdateSite" asp-route-id="@item.SiteInfo.Id" data-target="#modal-action-customer"
                       class="btn btn-info">
                        <i class="glyphicon glyphicon-pencil"></i> Редактировать
                    </a>
                    <a id="deleteCustomerModal" data-toggle="modal" asp-action="RemoveSite" asp-route-id="@item.SiteInfo.Id" data-target="#modal-action-customer" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i> Удалить
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</head>
<body>
<div>
      
</div>
</body>
</html>